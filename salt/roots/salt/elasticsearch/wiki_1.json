{
  "template_wiki" : {
    "template" : "wiki",
    "settings" : {
      "number_of_shards" : 1,
      "number_of_replicas": 0
    },
    "mappings": {
      "wiki": {
        "properties": {
          "comment": {
            "type": "string",
            "analyzer": "keyword"
          },
          "myid": {
            "type": "string",
            "analyzer": "keyword"
          },
          "text": {
            "type": "string",
            "analyzer": "norwegian",
            "norms": { "enabled": true },
            "fields": {
              "text_tags": {
                "type":"string",
                "analyzer": "simple"
              }
            }
          },
          "title": {
            "type": "string",
            "norms": { "enabled": false },
            "analyzer": "norwegian",
            "fields": {
              "title_simple": {
                "type": "string",
                "analyzer": "simple"
              }
            }
          }
        }
      }
    }
  }
}

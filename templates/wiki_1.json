{
  "template" : "wiki*",
  "settings" : {
    "number_of_shards" : 1,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "myStandard": {
          "tokenizer": "standard",
          "filter": ["standard","lowercase"]
        },
        "myStandard_folded": {
          "tokenizer": "standard",
          "filter": ["standard","lowercase","asciifolding"]
        },
        "myNGram": {
          "tokenizer": "myNGram",
          "filter": ["lowercase"]
        },
        "myNGram_folded": {
          "tokenizer": "myNGram",
          "filter": ["lowercase","asciifolding"]
        }
      },
      "tokenizer": {
        "myNGram": {
          "type": "nGram",
          "min_gram": 3,
          "max_gram": 15,
          "token_chars": ["letter","digit"]
        }
      },
      "filter": {
        "myNorwegian" : {
          "type": "stemmer",
          "name": "norwegian"
        }
      }
    }
  },
  "mappings": {
    "wiki": {
      "properties": {
        "comment": {
          "type": "string",
          "index": "not_analyzed"
        },
        "myid": {
          "type": "string",
          "index": "not_analyzed"
        },
        "text": {
          "type": "string",
          "analyzer": "simple",
          "norms": { "enabled": false }
        },
        "title": {
          "type": "string",
          "analyzer": "simple",
          "norms": { "enabled": false }
        }
      }
    }
  }
}
